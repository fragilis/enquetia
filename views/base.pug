    title Enquetia (アンケティア) - みんなでアンケしよう！
    meta(charset='utf-8')
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T", crossorigin="anonymous")
    link(href="https://use.fontawesome.com/releases/v5.6.1/css/all.css", rel="stylesheet")
    meta(name="keywords", content="質問, アンケート, twitter")
    meta(property="og:url", content="https://enquietia.net" + url)
    link(rel="canonical", href="https://enquietia.net" + url)
    meta(name="twitter:site", content="@enquetia")
    meta(name="robots", content="noarchive")
    meta(name="copyright", content="Copyright &amp;copy; Enquetia All right reserved.")
    meta(content='on', http-equiv='x-dns-prefetch-control')
    link(rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/cookieconsent@3/build/cookieconsent.min.css")
    link(rel="stylesheet" type="text/css" href="/css/enquetia.css")
    link(rel="icon", type="image/png", href="/img/favicon.png")
    script(data-ad-client="ca-pub-1361953622760947", async, src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js")
    block head
  body
    nav.navbar.navbar-light(style="background-color: #e3f2fd;")
      a.navbar-brand(href="/")
        img.rounded.d-inline-block.align-top.mr-2(src="/img/logo.png", width="40", height="40")
        | Enquetia
      form.class-inline.d-none.d-sm-block
        a.btn.btn-sm.btn-primary(style="width:250px;", href="/add") アンケートを作る
      span.navbar-text.navbar-right
        if profile
          a(href="/mypage" title="マイページに移動")
            if profile.image
              img.rounded-circle.mr-2(src=profile.image, width=40)
            else
              span #{profile.displayName} &nbsp;
          a(href=logout) ログアウト
        else
          a(href=login) Twitterでログイン
    if messages != null
      if messages.info
        .alert.alert-info.alert-dismissible.fade.show.mb-0
          strong Info:
          span.ml-2= messages.info
          button.close(type="button", data-dismiss="alert", aria-label="Close")
            span(aria-hidden="true") &times;
      if messages.warn
        .alert.alert-warning.alert-dismissible.fade.show.mb-0
          strong Warning:
          span.ml-2= messages.warn
          button.close(type="button", data-dismiss="alert", aria-label="Close")
            span(aria-hidden="true") &times;
      if messages.error
        .alert.alert-danger.alert-dismissible.fade.show.mb-0
          strong Error:
          span.ml-2= messages.error
          button.close(type="button", data-dismiss="alert", aria-label="Close")
            span(aria-hidden="true") &times;
    main.container.pt-4.pb-4(role="main", style="max-width:720px; background-color: #FFFFFF;")
      block content
    script(src="https://code.jquery.com/jquery-3.4.1.slim.min.js", integrity="sha256-pasqAKBDmFT4eHoN2ndd6lN370kFiGUFyTiUHWhU7k8=", crossorigin="anonymous")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js" integrity="sha384-wHAiFfRlMFy6i5SRaxvfOCifBUQy1xHdJ/yoi7FRNXMRBu5WHdZYu1hA6ZOblgut" crossorigin="anonymous")
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js", integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM", crossorigin="anonymous")
    block script
